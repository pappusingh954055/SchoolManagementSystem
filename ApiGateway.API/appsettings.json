{
  "Jwt": {
    "Key": "THIS_IS_A_VERY_STRONG_SECRET_KEY_12345",
    "Issuer": "School.Identity",
    "Audience": "School.Client",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },

  "ReverseProxy": {
    "Routes": {
      "identity-login": {
        "ClusterId": "identity-cluster",
        "Match": { "Path": "/api/auth/login" }
      },
      "identity-register": {
        "ClusterId": "identity-cluster",
        "Match": { "Path": "/api/auth/register" }
      },
      "identity-refresh": {
        "ClusterId": "identity-cluster",
        "Match": { "Path": "/api/auth/refresh" }
      },

      "school-route": {
        "ClusterId": "school-cluster",
        "Match": { "Path": "/api/schools/{**catch-all}" }
      },

      "student-route": {
        "ClusterId": "student-cluster",
        "Match": { "Path": "/api/students/{**catch-all}" }
      },

     
      "employee-route": {
        "ClusterId": "employee-cluster",
        "Match": { "Path": "/api/employees/{**catch-all}" }
      }
    },

    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:3000/" }
        }
      },

      "school-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:4000/" }
        }
      },

      "student-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5000/" }
        }
      },
     
      "employee-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:6000/" }
        }
      }
    }
  }
}
