{
  "Jwt": {
    "Key": "THIS_IS_A_VERY_STRONG_SECRET_KEY_12345",
    "Issuer": "School.Identity",
    "Audience": "School.Client"
  },

  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "school-route": {
        "ClusterId": "school-cluster",
        "Match": {
          "Path": "/api/schools/{**catch-all}"
        }
      },
      "student-route": {
        "ClusterId": "student-cluster",
        "Match": {
          "Path": "/api/students/{**catch-all}"
        }
      }
    },

    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "d1": { "Address": "http://identity-api:8080/" }
        }
      },
      "school-cluster": {
        "Destinations": {
          "d1": { "Address": "http://school-api:8080/" }
        }
      },
      "student-cluster": {
        "Destinations": {
          "d1": { "Address": "http://student-api:8080/" }
        }
      }
    }
  }
}
